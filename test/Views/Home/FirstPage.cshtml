@{
    ViewData["Title"] = "Home Page";
}
@model int

<script src="../js/FirstPage.js"></script>
<script>
    window.onload = function () {
        if (@Model == 422)
            alert("Возникла ошибка обработки данных на сервере. Проверьте правильность ввода данных.");
    };
</script>

<link rel="stylesheet" href="../css/FirstPage.css" />

<form id="calculatorForm" action="../Home/SecondPage" method="post" class="form container" lang="en">
    <div class="form-group row m-1">
        <label for="LoanAmount" class="form-label formLabel col-sm"> Сумма займа </label>
        <input id="LoanAmount" required name="LoanAmount" type="number" min="0" step=".01" placeholder="10 000" class="form-control col-sm" />
        <span class="col-1">p.</span>
    </div>
    <div class="form-group row m-1">
        <label id="LoanTermLabel" for="LoanTerm" class="form-label formLabel col-sm">Срок займа (в месяцах)</label>
        <input id="LoanTerm" required name="LoanTerm" type="number" min="0" placeholder="12" class="form-control col-sm" />
        <span id="LoanTermSpan" class="col-1">мес.</span>
    </div>
    <div class="form-group row m-1">
        <label id="InterestRateLabel" for="InterestRate" class="form-label formLabel col-sm">Ставка (в год)</label>
        <input id="InterestRate" required name="InterestRate" type="number" min="0" step=".01" placeholder="16" class="form-control col-sm" />
        <span class="col-1">%</span>
    </div>
    <div class="form-group row m-1">
        <label for="AlternativeCalculation" class="form-check-label formLabel col-sm">Дополнительное задание:</label>
        <span class="col-sm">
            <input id="AlternativeCalculation" name="alternativeCalculation" class="checkboxPadding form-check-input" type="checkbox" onchange="ChangeMode()" />
        </span>
        <span class="col-1"></span>
    </div>
    <div id="PaymentStepDiv" class="form-group row m-1" hidden="true">
        <label for="PaymentStep" class="form-label formLabel col-sm">Шаг платежа (в днях)</label>
        <input id="PaymentStep" name="PaymentStep" type="number" min="1" placeholder="1" class="form-control col-sm" />
        <span class="col-1">д.</span>
    </div>
    <div class="form-group row m-1">
        <button id="submitButton" class="btn btn-primary submitButton" type="submit">Рассчитать</button>
    </div>
</form>
</p>
